                android:textSize="@dimen/textview_big_0_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" />

        </RelativeLayout>-->
        <include layout="@layout/footer_layout_no_book" />

    </LinearLayout>

    <include layout="@layout/custom_progressbar" />

</RelativeLayout>